{%- comment -%}
Template: image_text_overlay_homepage_hero.liquid
Purpose: Specialized version of the standard Image with Text Overlay template
for homepage hero banners. Adds a reusable class (`homepage-hero-image`) to
support global hero CSS without changing the original image_text_overlay template.

Based on: image_text_overlay.liquid (updated 2025-10-31)
{%- endcomment -%}

{%- assign type = content_block.sub_type | default: blank -%}

<div
  class="SC-ContentBlock SC-ImageTextOverlay homepage-hero-image"
  id="{% if content_block.identifier != blank %}SC-ContentBlock-{{ content_block.identifier }}{% endif %}"
  data-cb="{{ content_block.identifier }}"
>

  <!-- Banner background image -->
  <div 
    class="SC-Banner"
    {% if content_block.image and content_block.image.massive_url %}
      style="background-image: url('{{ content_block.image.massive_url }}')"
    {% endif %}
  >

    <!-- Banner container -->
    <div class="SC-Banner_container{% if content_block.alignment != blank %} sc-{{ content_block.alignment }}{% endif %}">

      <!-- Banner content -->
      <div 
        class="SC-Banner_content{% if type == 'offset' %} sc-color-white{% endif %}" 
        data-type="{{ type }}"
      >

        {%- if content_block.title != blank -%}
          <h1 class="SC-Banner_heading">{{ content_block.title }}</h1>
        {%- endif -%}

        {%- assign banner_text = content_block.subtitle | default: content_block.content -%}

        {%- if banner_text != blank -%}
          <div class="SC-Banner_subheading{% if type == 'offset' %} sc-color-white{% endif %}">
            {{ banner_text }}
          </div>
        {%- endif -%}

        {%- if content_block.content != blank and banner_text != content_block.content -%}
          <div class="sc-mt-small">{{ content_block.content }}</div>
        {%- endif -%}

        {%- if content_block.link_label and content_block.link_target -%}
          <a class="SC-Banner_cta" href="{{ content_block.link_target }}">
            {{ content_block.link_label }}
          </a>
        {%- endif -%}

      </div> <!-- /.SC-Banner_content -->
    </div> <!-- /.SC-Banner_container -->

    {%- if type == 'offset' -%}
      <div class="SC-Banner_overlay"></div>
    {%- endif -%}
  </div> <!-- /.SC-Banner -->
</div> <!-- /.SC-ContentBlock -->