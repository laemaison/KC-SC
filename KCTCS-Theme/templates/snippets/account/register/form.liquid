const syncCounty = () => {
countyHidden.value = countyVisible.value;
console.log('County synced:', countyVisible.value);
};
countyVisible.addEventListener('change', syncCounty);
countyVisible.addEventListener('blur', syncCounty);
}
}

});

})();
</script>